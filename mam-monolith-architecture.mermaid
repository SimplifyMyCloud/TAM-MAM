    UI[Web UI / Client Apps]
    
    %% Core Service
    MAM[MAM Monolithic Service]
    
    %% Data Stores
    DB[(PostgreSQL DB)]
    REDIS[(Redis Cache)]
    
    %% External Systems
    TAMS[TAMS API]
    
    %% Connections
    UI --> MAM
    MAM --> DB
